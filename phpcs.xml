<?xml version="1.0"?>
<ruleset name="PHP85Compatibility">
    <description>PHP 8.5 Compatibility Check for Xataface</description>

    <!-- Include all PHP files -->
    <file>.</file>

    <!-- Exclude vendor and other non-source directories -->
    <exclude-pattern>/vendor/</exclude-pattern>
    <exclude-pattern>/node_modules/</exclude-pattern>
    <exclude-pattern>/nbproject/</exclude-pattern>
    <exclude-pattern>/.git/</exclude-pattern>
    <exclude-pattern>/local-test-apps/</exclude-pattern>

    <!-- Use PHPCompatibility ruleset -->
    <rule ref="PHPCompatibility"/>

    <!-- Check for PHP 8.0+ compatibility (8.5 includes 8.0-8.4 changes) -->
    <config name="testVersion" value="8.0-"/>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
</ruleset>
